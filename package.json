{
  "name": "aquatech-backend",
  "version": "1.0.0",
  "description": "Backend for Aquatech Dashboard",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --passWithNoTests",
    "test:mqtt": "node test-mqtt.js",
    "test:mqtt:publish": "node test-mqtt-publisher.js",
    "test:postgres": "node scripts/test-postgres-connection.js",
    "test:tables": "node scripts/test-postgres-tables.js",
    "setup": "bash scripts/setup.sh",
    "setup:postgres:local": "bash scripts/setup-postgres-local.sh",
    "migrate": "bash scripts/migrations/run-migration.sh",
    "migrate:sensores": "bash scripts/migrations/run-migration.sh scripts/migrations/001_create_sensores_table.sql",
    "migrate:puntoventa": "bash scripts/migrations/run-migration.sh scripts/migrations/002_create_punto_venta_table.sql",
    "migrate:puntoventa:minimal": "bash scripts/migrations/run-migration.sh scripts/migrations/002_create_punto_venta_table_minimal.sql",
    "test:migrate:puntoventa": "bash scripts/test-migrate-puntoventa.sh",
    "migrate:tiwater:products": "bash scripts/migrations/run-tiwater-migration.sh scripts/migrations/004_create_tiwater_products_table.sql",
    "migrate:tiwater:quotes": "bash scripts/migrations/run-tiwater-migration.sh scripts/migrations/005_create_tiwater_quotes_table.sql",
    "migrate:tiwater": "bash scripts/migrations/run-tiwater-migration.sh",
    "verify:tiwater": "bash scripts/migrations/verify-tiwater-tables.sh",
    "migrate:auth": "bash scripts/migrations/run-migration.sh scripts/migrations/007_create_clients_table.sql && bash scripts/migrations/run-migration.sh scripts/migrations/018_create_roles_table.sql && bash scripts/migrations/run-migration.sh scripts/migrations/019_create_users_table.sql && bash scripts/migrations/run-migration.sh scripts/migrations/020_seed_roles_and_admin_user.sql",
    "migrate:products": "bash scripts/migrations/run-migration.sh scripts/migrations/021_create_products_table.sql && bash scripts/migrations/run-migration.sh scripts/migrations/022_create_controllers_table.sql && bash scripts/migrations/run-migration.sh scripts/migrations/023_create_notifications_table.sql && bash scripts/migrations/run-migration.sh scripts/migrations/024_create_product_logs_table.sql && bash scripts/migrations/run-migration.sh scripts/migrations/025_create_reports_table.sql && bash scripts/migrations/run-migration.sh scripts/migrations/026_create_client_metrics_table.sql",
    "seed:admin": "node scripts/seed-admin-user.js",
    "test:email": "node scripts/test-email-debug.js",
    "test:email:send": "node scripts/test-email-debug.js --test-send",
    "test:email:simple": "node scripts/simple-email-example.js",
    "test:email:connectivity": "bash scripts/test-smtp-connectivity.sh",
    "recover:services": "sudo bash scripts/services_recover.sh",
    "diagnose:pm2": "sudo bash scripts/diagnose_pm2_kill.sh",
    "fix:pm2": "sudo bash scripts/fix_pm2_issues.sh",
    "check:resources": "bash scripts/check_system_resources.sh",
    "fix:codigo-tienda-index": "node scripts/fix-codigo-tienda-index.js",
    "dev-mode-data-gen": "DEV_MODE_USE_MQTT=true node scripts/run-dev-mode-data-generator.js"
  },
  "dependencies": {
    "@tuya/tuya-connector-nodejs": "^2.1.2",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "archiver-zip-encrypted": "^1.0.12",
    "archiver-zip-encrypted": "^2.0.0",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.14.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "mqtt": "^5.3.0",
    "node-7z": "^3.0.0",
    "tuyapi": "github:codetheweb/tuyapi",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "nodemon": "^3.0.1"
  }
}
